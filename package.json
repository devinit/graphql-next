{
  "name": "@devinit/graphql-next",
  "version": "0.0.16",
  "description": "simple graphql framework @devinit",
  "main": "lib/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "patch": "release-it -i patch -n",
    "feature": "release-it -i minor -n",
    "breaking": "release-it -i major -n",
    "build": "tsc && tsc -p src/makeTypeDefs"
  },
  "author": "epicallan.al@gmail.com",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devinit/graphql-next.git"
  },
  "peerDependencies": {
    "graphql": ">= 0.10.0 < 0.13.0"
  },
  "dependencies": {
    "@gql2ts/from-schema": "1.4.0",
    "@playlyfe/gql": "2.5.0",
    "apollo-fetch": "0.7.0",
    "apollo-link": "1.0.7",
    "apollo-server-express": "1.3.2",
    "body-parser": "1.18.2",
    "color": "3.0.0",
    "compression": "1.7.1",
    "cors": "2.8.4",
    "csvtojson": "1.1.9",
    "express": "4.16.2",
    "fs-extra": "5.0.0",
    "glob-promise": "3.3.0",
    "graphql-tools": "2.16.0",
    "helmet": "3.10.0",
    "lru-cache": "4.1.1",
    "merge-graphql-schemas": "1.4.0",
    "morgan": "1.9.0",
    "prettier": "1.10.2",
    "pg-promise": "7.4.1",
    "ramda": "0.25.0",
    "shortid": "2.2.8"
  },
  "devDependencies": {
    "@gql2ts/types": "1.3.0",
    "@types/body-parser": "1.16.8",
    "@types/color": "3.0.0",
    "@types/cors": "2.8.3",
    "@types/express": "4.11.0",
    "@types/fs-extra": "5.0.0",
    "@types/graphql": "0.12.3",
    "@types/helmet": "0.0.37",
    "@types/jest": "22.1.0",
    "@types/lru-cache": "4.1.0",
    "@types/morgan": "1.7.35",
    "@types/ramda": "0.25.16",
    "@types/node": "9.4.0",
    "@types/shortid": "0.0.29",
    "@types/zen-observable": "0.5.3",
    "concurrently": "3.5.1",
    "git-pre-hooks": "1.2.0",
    "jest": "22.1.4",
    "jest-cli": "22.1.4",
    "pretty-format": "22.1.0",
    "release-it": "6.1.1",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "git-pre-hooks": {
    "pre-commit": [
      "npm run lint",
      "npm run build"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
